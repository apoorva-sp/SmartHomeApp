<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Top Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, John Doe!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/manageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your properties"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Sign Out Button -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/headerSection"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vert"
        android:contentDescription="Menu"
        app:tint="@android:color/black"
        android:padding="12dp" />


    <!-- RecyclerView for property cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProperties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerSection"
        android:layout_above="@id/addAnotherHomeBtn"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="70dp"
        android:scrollbars="vertical" />

    <!-- Fixed Add Another Home Button -->
    <Button
        android:id="@+id/addAnotherHomeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Add Another Home"
        android:background="@drawable/dark_button_bg"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:paddingVertical="12dp" />

</RelativeLayout>
